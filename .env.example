# OpenTelemetry Configuration (Optional)
# OTEL_ENABLED: Enable OpenTelemetry instrumentation (true|false). Default false if unset.
OTEL_ENABLED=true
# OTEL_EXPORTER_OTLP_ENDPOINT: OTLP endpoint for traces/metrics export. Example http://localhost:4317
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# API Server Configuration
# API_HOST: Host interface to bind the API server. Example 0.0.0.0
API_HOST=0.0.0.0
# API_PORT: Port for the API server. Example 8000
API_PORT=8000
# API_DEBUG: Enable debug mode (true|false). Default false in production.
API_DEBUG=false

# Additional environment variables can be added as needed.