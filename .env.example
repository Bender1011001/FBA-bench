# OpenTelemetry Configuration (Optional)
# OTEL_ENABLED: Enable OpenTelemetry instrumentation (true|false). Default false if unset.
OTEL_ENABLED=true
# OTEL_EXPORTER_OTLP_ENDPOINT: OTLP endpoint for traces/metrics export. Example http://localhost:4317
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# API Server Configuration
# API_HOST: Host interface to bind the API server. Example 0.0.0.0
API_HOST=0.0.0.0
# API_PORT: Port for the API server. Example 8000
API_PORT=8000
# API_DEBUG: Enable debug mode (true|false). Default false in production.
API_DEBUG=false

# Realtime / Redis
# REDIS_URL: Connection string for Redis used by realtime WebSocket pub/sub
# Example: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# Database Configuration
# DATABASE_URL: SQLAlchemy database URL.
# Defaults to a local SQLite file if unset.
# Examples:
#   SQLite (dev default): sqlite:///./fba_bench.db
#   PostgreSQL: postgresql+psycopg://user:password@localhost:5432/fba_bench
DATABASE_URL=sqlite:///./fba_bench.db
# DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/fba_bench

# Additional environment variables can be added as needed.