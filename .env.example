# Backend environment example (safe defaults for local/dev)
# Never commit private keys; only public key goes here when needed.

# --- Auth ---
AUTH_ENABLED=false              # Enforce JWT on protected routes (prod: true)
AUTH_TEST_BYPASS=true           # Bypass middleware for local/dev (prod: false)
AUTH_JWT_PUBLIC_KEY=""          # RSA public key (PEM). Multi-line allowed or single-line with \n
AUTH_JWT_ALG=RS256              # Default verification algorithm
AUTH_JWT_ISSUER=""              # Optional expected iss claim
AUTH_JWT_AUDIENCE=""            # Optional expected aud claim
AUTH_PROTECT_DOCS=false         # Protect interactive docs with auth (prod: true)

# --- CORS ---
# Comma-separated list of allowed origins (no spaces), or "*" to allow all (not recommended in prod)
FBA_CORS_ALLOW_ORIGINS=*

# --- Rate limiting ---
# Format examples: "100/minute", "1000/hour"
API_RATE_LIMIT=100/minute

# --- Database ---
# Local SQLite (async) by default; change to Postgres in non-dev environments
DATABASE_URL=sqlite+aiosqlite:///./dev.db
DB_AUTO_CREATE=true             # Auto-create DB schema on startup if supported (prod: false)

# --- Logging ---
LOG_LEVEL=INFO